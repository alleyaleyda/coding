import java.util.Scanner;

public class ProcessAName5026201047 {
    public static void main(String[] args){
        Substring();
    }
    public static void Substring(){
        Scanner name = new Scanner(System.in);
        System.out.println("write your name");
        String nama = name.nextLine();
        String first = nama.substring(0,1);
        String last = nama.substring(nama.indexOf(" ") + 1);

        int panjangNama = nama.substring(0,nama.indexOf(" ")).length();
        System.out.println(panjangNama);
        System.out.printf("\nYour name is: %s, %s", last, first);
    }

}
